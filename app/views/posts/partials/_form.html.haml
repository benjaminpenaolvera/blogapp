.new_post_form
  = form_for(@post) do |f|

    .title_form
      = f.label :title
      = f.text_field :title

    .header_form
      = f.label :header
      = f.file_field :header

    .content_form
      = f.label :content
      = f.cktext_area :content, rows: "30"

    .submit_form
      = f.submit class: 'btn btn-default btn-block'
