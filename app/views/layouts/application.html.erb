<!DOCTYPE html>
<html>
<head>
  <title>Blogapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <% if notice %>
    <p class="notice alert alert-success"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="notice alert alert-warning"><%= alert %></p>
  <% end %>
</header>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
